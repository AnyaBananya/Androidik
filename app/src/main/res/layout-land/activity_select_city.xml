<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.SelectCityActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/detailsElementBackground">

                <fragment
                        android:name="ru.geekbrains.bananaforecast.fragment.CityListFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/cityList" />
            </FrameLayout>

            <FrameLayout
                    android:id="@+id/frameLayoutCity"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/detailsElementBackground">

             <!--   <fragment
                        android:name="ru.geekbrains.bananaforecast.fragment.CityInfoFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/cityInfo" />-->
            </FrameLayout>

        </LinearLayout>
    </ScrollView>


    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/detailsElementBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <fragment
                android:name="ru.geekbrains.bananaforecast.fragment.SelectCityButtonFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/selectButtonFragment" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>